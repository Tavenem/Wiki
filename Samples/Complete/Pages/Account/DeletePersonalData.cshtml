@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Data";
}

<div class="placard">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <div class="alert alert-warning" role="alert">
        <p>
            <strong>
                Deleting this data will permanently delete your account, and
                cannot be undone.
            </strong>
        </p>
    </div>
</div>

<partial name="_ErrorMessage" model="Model.ErrorMessage" />
<div class="row justify-content-center mb-3">
    <div class="col-sm-6">
        <form id="delete-user" method="post" class="form-group">
            <div asp-validation-summary="All" class="text-danger"></div>
            @if (Model.RequirePassword)
            {
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
            }
            <button class="btn btn-danger" type="submit">Delete data and close my account</button>
        </form>
    </div>
</div>
