@inject IWikiOptions WikiOptions
@{
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<div class="wiki account-main">
    <nav>
        <div class="wiki-sidebar-logo" role="banner">
            <a class="wiki-sidebar-logo-link" href="/Wiki/@WikiOptions.MainPageTitle" title="Visit the main page"></a>
        </div>
    </nav>
    <div>
        <partial name="_LoginPartial" />
        <main class="wiki-content" role="main">
            @RenderBody()
        </main>
        <footer class="wiki-bottom-footer">
            <span>Developed by <a href="//williamstead.com" target="_blank">William Stead</a></span>
            <span>ver 0.1.0 © 2020—@(DateTime.Now.Year) <a href="//neverfoundry.com" target="_blank">NeverFoundry</a></span>
        </footer>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
