@page
@model NeverFoundry.Wiki.MVCSample.Pages.Account.RegisterFido2MfaModel
@{
    ViewData["Title"] = "Register authenticator device";
}

<div class="jumbotron jumbotron-fluid">
    <div class="container d-flex flex-column">
        <h1 class="display-4">@ViewData["Title"]</h1>
        <p class="lead">Create a new account using an authenticator device.</p>
        <div id="fido2NotSupportedWarning" class="alert alert-danger mt-3" style="display: none;">
            <p>Your browser does not seem to support the Web Authentication API yet.</p>
            <p class="mb-0"><a href="https://caniuse.com/#search=webauthn" target="_blank" class="alert-link">Click here</a> to see a list of supported browser versions.</p>
        </div>
        <form action="/mfa" method="post" id="fido2-register">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label name="username" asp-for="Input.Email"></label>
                <input name="username" asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label name="displayName" asp-for="Input.UserName"></label>
                <input name="displayName" asp-for="Input.UserName" class="form-control" />
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>

            <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />

            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>
    <script src="js/fido2.js"></script>
}
